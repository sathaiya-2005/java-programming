import java.util.*;

public class Solution 
{
    public static void main(String[] args) 
    {
        Scanner obj = new Scanner(System.in);
        
        int input = obj.nextInt(); 
        
        if ( input <= 0 ) 
        {
            
            System.out.println("Invalid Input");
            
        }
        else
        {
            int reversed = 0;

            while (input > 0) 
            {
                int digit = input % 10;         
                reversed = reversed * 10 + digit; 
                input = input / 10; 
            }    
            
        System.out.println(reversed);
            
        }    
    }
}
