import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner obj = new Scanner(System.in);

        float base = obj.nextFloat();
        float height = obj.nextFloat();
        float side1 = obj.nextFloat();
        float side2 = obj.nextFloat();
        float side3 = obj.nextFloat();

        double area = 0.5 * base * height;
        float perimeter = side1 + side2 + side3;

        System.out.printf("Area of Triangle is %.2f%n", area); 
        System.out.printf("Perimeter of Triangle is %.2f%n", perimeter); 

    }
}
