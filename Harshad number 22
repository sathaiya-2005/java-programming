import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner obj = new Scanner(System.in);
        
        int input = obj.nextInt();
        int sum = 0;
        int temp = input;
        
        
        while(temp > 0)
        {
            int digit = temp % 10;
            sum += digit;
            temp = temp / 10;
        
        }
        
        if( input % sum == 0)
        {
            System.out.println("Harshad Number");
        }
        else
        {
            System.out.println("Not Harshad Number");
        }
               
    }
}
